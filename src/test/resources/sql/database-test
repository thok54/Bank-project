DROP DATABASE bank_project_test;
CREATE DATABASE bank_project_test;
USE bank_project_test;
    CREATE USER 'user' IDENTIFIED WITH mysql_native_password BY 'user';
    GRANT ALL on bank_project_test.* TO 'user';

     CREATE TABLE BANKS
       (
          id INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
          name VARCHAR(20),
          address VARCHAR(50)
       );

       INSERT INTO BANKS(name, address) VALUES('bestBank', 'right here'), ('Worst ATM', 'over there');


       CREATE TABLE ACCOUNTS
       (
          id INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
          name VARCHAR(20),
          money float,
          iban VARCHAR(20)
       );

       INSERT INTO ACCOUNTS(name, money, iban) VALUES('Peter', 3.00, 'PIPIRANA87'), ('Aurelio', 8.49, 'SATURN15STINKS');


       CREATE TABLE PAYMENTS
       (
          id INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
          bankId INT,
          userId INT,
          amount float,
          FOREIGN KEY(bankId) REFERENCES BANKS(id),
          FOREIGN KEY(userId) REFERENCES ACCOUNTS(id)
       );

       INSERT INTO PAYMENTS(bankId, userId, amount) VALUES(1, 2, 1.87), (2, 1, 3.41);
